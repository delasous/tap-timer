{
    "name": "tap-timer",
    "description": "A tiny timer that lives in the browser",
    "manifest_version": 2,
    "version": "0.0.1",
    "browser_action": {
        "default_popup": "index.html",
        "default_icon": {
            "32": "icon-inactive-32.png"
        },
        "browser_style": true
    },
    "background": {
        "page": "background.html",
        "persistent": true
    },
    "commands": {
      "hot-start-40": {
        "suggested_key": {
          "default": "Alt+3",
          "linux": "Alt+4"
        },
        "description": "Hot Start 40 mins."
      },
        "hot-start-20": {
          "suggested_key": {
            "default": "Alt+2",
            "linux": "Alt+2"
          },
          "description": "Hot Start 20 mins."
        },
        "hot-pause": {
            "suggested_key": {
              "default": "Alt+S",
              "linux": "Alt+S"
            },
            "description": "Hot Pause."
        },
        "hot-reset": {
            "suggested_key": {
              "default": "Alt+R",
              "linux": "Alt+R"
            },
            "description": "Hot Reset."
        }
      }
}    